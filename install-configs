#!/bin/bash

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
HOME_CONFIG=$HOME/.config

# Create an array with my link pairs
configs=(
  # "$I3_HOME/configs/i3.config $HOME_CONFIG/i3/config"
  # "$I3_HOME/configs/i3blocks.config $HOME_CONFIG/i3blocks/config"
  # "$SCRIPT_DIR/configs/kitty $HOME_CONFIG/kitty/kitty.conf"
  # "$SCRIPT_DIR/configs/hypr/hyprland.conf $HOME_CONFIG/hypr/hyprland.conf"
  # "$SCRIPT_DIR/configs/hypr/hyprpaper $HOME_CONFIG/hypr/hyprpaper.conf"
  # "$SCRIPT_DIR/configs/hypr/hyprlock $HOME_CONFIG/hypr/hyprlock.conf"
  "$SCRIPT_DIR/configs/ranger $HOME_CONFIG"
  "$SCRIPT_DIR/configs/nvim $HOME_CONFIG"
  "$SCRIPT_DIR/configs/zsh/zshrc $HOME/.zshrc"
)

# Iterate through that array and pass pair to the script
# Seeing as my script takes in the pair in the same format written above,
# no parsing is necessary
echo ""

for pair in "${configs[@]}"; do
  sh $SCRIPT_DIR/scripts/link-files.sh $pair
done
